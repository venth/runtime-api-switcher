<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
>

    <bean class="org.venth.poc.runtimeapiswitcher.webapp.endpoint.ApplicationResource" />

    <bean
            id="osgiContainer"
            class="org.venth.poc.runtimeapiswitcher.webapp.osgi.OsgiFrameworkBootstraper"
            destroy-method="stopFramework"
            p:bundlesLocation="/WEB-INF/bundles"
    />

    <bean id="osgiServiceProxy" class="org.venth.poc.runtimeapiswitcher.webapp.osgi.OsgiServiceProxy"
          depends-on="osgiContainer"
          destroy-method="stop"
          abstract="true"
          p:context-ref="osgiContainer"
    />

    <bean id="adaptedService_v1.0" parent="osgiServiceProxy"
          p:serviceType="org.venth.poc.runtimeapiswitcher.adapter.api.AdaptedService"
    />

</beans>